{
	"name": "obsidian-tebla-plugin",
	"version": "1.0.0",
	"description": "Spaced repetition in table format. Uses modern FSRS algorithm.",
	"main": "main.js",
	"type": "module",
	"scripts": {
		"dev": "docker compose up",
		"buildApp": "docker compose run app sh -c \"tsc -noEmit -skipLibCheck && NODE_ENV=production vite build\"",
		"down": "docker compose down",
		"buildImage": "docker compose build",
		"afterDepsUpdate": "npm run down && npm run buildImage",
		"enter": "docker compose exec -w /opt/nodeApp/app app /bin/bash",
		"version": "docker compose run app sh -c \"node version-bump.mjs && git add manifest.json versions.json\"",
		"updateDockerCompose": "docker compose run app tsx ./npmScripts/updateDockerCompose.ts",
		"updateDockerfile": "docker compose run app tsx ./npmScripts/updateDockerfile.ts",
		"updateManifest": "docker compose run app tsx ./npmScripts/updateManifest.ts",
		"updateMinAppVersion": "docker compose run app tsx ./npmScripts/updateMinAppVersion.ts"
	},
	"keywords": [
		"anki",
		"spaced repetition",
		"active recall",
		"fsrs"
	],
	"author": "Alexander Sorokin",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "20.19.11",
		"@types/string-hash": "1.1.3",
		"@vitejs/plugin-vue": "5.2.4",
		"obsidian": "latest",
		"string-hash": "1.1.3",
		"tslib": "2.8.1",
		"tsx": "4.20.4",
		"typescript": "5.9.2",
		"vite": "6.3.5",
		"yaml": "2.8.1"
	}
}
